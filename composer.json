{
    "name": "kingdutch/revolt-playground",
    "description": "A playground to demonstrate how certain Drupal Fiber patterns work in revolt's event-loop.",
    "type": "project",
    "license": "GPL-3",
    "require": {
        "php": ">8.2",
        "revolt/event-loop": "^1.0",
        "symfony/console": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Kingdutch\\RevoltPlayground\\": "src/",
            "Drupal\\": "Drupal/"
        },
        "files": [
            "Drupal/Core/Async/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Alexander Varwijk",
            "email": "alexander@getopensocial.com"
        }
    ],
    "require-dev": {
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
